{
  "name": "the-potato-heroes",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "tw:watch": "tailwindcss -i assets/css/input.css -o assets/css/output.css --watch",
    "tw:build": "cross-env NODE_ENV=production tailwindcss -i assets/css/input.css -o assets/css/output.css --minify",
    "jekyll": "bundle exec jekyll serve",
    "dev": "concurrently -k \"npm:tw:watch\" \"npm:jekyll\"",
    "build": "npm run tw:build && bundle exec jekyll build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  }
}
